    $custom_class = 'data-toggle="modal" data-target="#login-modal"';
}
?>
<li class="authorization-link" data-label="<?= $block->escapeHtml(__('or')) ?> login-popup">
    <span class="fa fa-user" id="user-icon"></span>
    <a <?php /* @noEscape */ /*$block->getLinkAttributes()*/ ?><?= /* @noEscape */ $dataPostParam ?> <?= /* @noEscape */ $custom_class ?>>
